<p id="notice"><%= notice %></p>

<h1>Listing Prices</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Price</th>
      <th>Address</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Avg rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= price.image %></td>
        <td><%= price.price %></td>
        <td><%= price.address %></td>
        <td><%= price.longitude %></td>
        <td><%= price.latitude %></td>
        <td><%= price.avg_rating %></td>
        <td><%= link_to 'Show', price %></td>
        <td><%= link_to 'Edit', edit_price_path(price) %></td>
        <td><%= link_to 'Destroy', price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

